<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.LearnActivity">

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Account"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewBack"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonTestResult"
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="Kết quả kiểm tra gần nhất"
        app:layout_constraintEnd_toEndOf="@+id/buttonAddWord"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonAddWord"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddWord" />

    <Button
        android:id="@+id/buttonMarkWord"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="40dp"
        android:text="Từ đã đánh dấu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAccount" />

    <Button
        android:id="@+id/buttonUserWord"
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="Từ của bạn"
        app:layout_constraintEnd_toEndOf="@+id/buttonMarkWord"
        app:layout_constraintStart_toStartOf="@+id/buttonMarkWord"
        app:layout_constraintTop_toBottomOf="@+id/buttonMarkWord" />

    <Button
        android:id="@+id/buttonAddWord"
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="Thêm từ"
        app:layout_constraintEnd_toEndOf="@+id/buttonUserWord"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonUserWord"
        app:layout_constraintTop_toBottomOf="@+id/buttonUserWord" />

</androidx.constraintlayout.widget.ConstraintLayout>
